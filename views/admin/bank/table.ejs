<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#add-modal-bank"
    >
      Create
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Name Bank</th>
            <th>Nomor Rekening</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(i = 0; i < banks.length; i++) { %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= banks[i].name %></td>
            <td><%= banks[i].nameBank %></td>
            <td><%= banks[i].nomorRekening %></td>
            <td>
              <img
                src="http://localhost:3000/<%= banks[i].imageUrl %>"
                alt="imageUrl"
                width="70"
              />
            </td>
            <td>
              <form
                action="banks/<%= banks[i].id %>?_method=DELETE"
                method="POST"
              >
                <a
                  href="javascript:void()"
                  class="btn btn-warning btn-circle btn-sm btn-update"
                  data-id="<%= banks[i].id %>"
                  data-name="<%= banks[i].name %>"
                  data-name-bank="<%= banks[i].nameBank %>"
                  data-nomor-rekening="<%= banks[i].nomorRekening %>"
                  ><i class="fa fa-edit"></i
                ></a>
                <button type="submit" class="btn btn-danger btn-circle btn-sm">
                  <i class="fa fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
