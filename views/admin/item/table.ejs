<div class="card shadow mb-4 mt-4">
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>#</th>
            <th>Title</th>
            <th>Price</th>
            <th>Country</th>
            <th>City</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(i = 0; i < item.length; i++) { %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= item[i].title %></td>
            <td><%= item[i].price %></td>
            <td><%= item[i].country %></td>
            <td><%= item[i].city %></td>
            <td>
              <form
                action="items/<%= item[i].id %>?_method=DELETE"
                method="POST"
              >
                <a href="#" class="btn btn-info btn-circle btn-sm"
                  ><i class="fa fa-image"></i
                ></a>
                <a
                  href="items/<%= item[i].id %>"
                  class="btn btn-warning btn-circle btn-sm btn-update"
                  ><i class="fa fa-edit"></i
                ></a>
                <button type="submit" class="btn btn-danger btn-circle btn-sm">
                  <i class="fa fa-trash"></i>
                </button>
                <a href="#" class="btn btn-success btn-circle btn-sm"
                  ><i class="fa fa-plus"></i
                ></a>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
